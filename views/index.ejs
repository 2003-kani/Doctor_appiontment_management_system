<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Healthcare - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">Doctor Healthcare</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#doctors">Doctors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1>Your Health, Our Priority</h1>
                    <p>Book appointments with the best doctors in your area.</p>
                    <a href="/register-patient" class="btn btn-primary">Book Appointment</a>
                </div>
                <div class="col-md-6">
                    <img src="/images/hero-image.jpg" alt="Healthcare" class="img-fluid">
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="services-section">
        <div class="container">
            <h2>Our Services</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="service-card">
                        <i class="fas fa-user-md"></i>
                        <h3>Expert Doctors</h3>
                        <p>Consult with experienced specialists in various fields.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service-card">
                        <i class="fas fa-calendar-check"></i>
                        <h3>Easy Appointments</h3>
                        <p>Book and manage your appointments online.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service-card">
                        <i class="fas fa-clock"></i>
                        <h3>24/7 Support</h3>
                        <p>Round-the-clock medical assistance and support.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Find Doctors Section -->
    <section id="doctors" class="doctors-section">
        <div class="container">
            <h2>Our Specialists</h2>
            <div class="row doctors-grid">
                <% doctors.forEach((doctor, index) => { %>
                    <div class="col-md-4 mb-4">
                        <div class="doctor-card">
                            <% 
                                let imageUrl;
                                if (doctor.gender === 'female') {
                                    imageUrl = `/images/doctors/female-doctor-${(index % 3) + 1}.jpg`;
                                } else {
                                    imageUrl = `/images/doctors/male-doctor-${(index % 3) + 1}.jpg`;
                                }
                                const fallbackImage = doctor.gender === 'female' 
                                    ? '/images/default-female-doctor.png'
                                    : '/images/default-male-doctor.png';
                            %>
                            <img 
                                src="<%= imageUrl %>" 
                                onerror="this.onerror=null; this.src='<%= fallbackImage %>'" 
                                alt="Dr. <%= doctor.first_name %>"
                                class="doctor-image"
                            >
                            <h3 class="doctor-name">Dr. <%= doctor.first_name %> <%= doctor.last_name %></h3>
                            <p class="doctor-specialization"><%= doctor.specialization %></p>
                            <div class="doctor-info">
                                <p><i class="fas fa-graduation-cap"></i> <%= doctor.qualification %></p>
                                <p><i class="fas fa-clock"></i> <%= doctor.experience_years %> years experience</p>
                            </div>
                            <a href="/login" class="btn btn-primary book-btn">
                                <i class="fas fa-calendar-plus"></i> Book Appointment
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact-section">
        <div class="container">
            <h2>Contact Us</h2>
            <div class="contact-info">
                <div class="contact-item">
                    <i class="fas fa-phone"></i>
                    <p>Call Us: <a href="tel:8977218926">+91 8977218926</a></p>
                </div>
                <div class="contact-item">
                    <i class="fas fa-envelope"></i>
                    <p>Email: <a href="mailto:<%= contactInfo.email %>"><%= contactInfo.email %></a></p>
                </div>
                <div class="contact-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <p>Location: <span><%= contactInfo.address %></span></p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h3>Doctor Healthcare</h3>
                    <p>Your trusted healthcare partner</p>
                </div>
                <div class="col-md-6">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register-patient">Register as Patient</a></li>
                        <li><a href="/register-doctor">Register as Doctor</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Doctor Healthcare. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 